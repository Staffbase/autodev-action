{
  "name": "autodev-action",
  "version": "v2.1.0",
  "description": "Github Action that tries to merge all commits from a PR with the dev label into the dev branch.",
  "author": "Staffbase GmbH",
  "keywords": [
    "actions",
    "git",
    "auto-dev",
    "auto-merge"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Staffbase/autodev-action.git"
  },
  "license": "Apache-2.0",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "lint:check": "eslint --cache --no-error-on-unmatched-pattern src/",
    "lint:fix": "eslint --cache --no-error-on-unmatched-pattern --fix src/",
    "test": "vitest run",
    "typecheck": "tsc",
    "format:check": "prettier --check ./",
    "format:write": "prettier --write ./",
    "build": "vite build",
    "all": "pnpm run build && pnpm run format && pnpm run lint && pnpm run test"
  },
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.1",
    "@octokit/openapi-types": "^22.2.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.7.8",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.13.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.9.0",
    "js-yaml": "^4.1.0",
    "node-fetch": "^3.3.2",
    "prettier": "3.3.2",
    "rollup-license-plugin": "^3.0.0",
    "rollup-plugin-license": "^3.5.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.4.0",
    "vite": "^5.4.3",
    "vite-plugin-externalize-deps": "^0.8.0",
    "vitest": "^1.6.0"
  },
  "packageManager": "pnpm@9.9.0"
}
